<configuration>


    <appender name="file" class="ch.qos.logback.core.FileAppender">
        <file>./log/logs.txt</file>
        <append>true</append>
        <encoder>
            <pattern>%d [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="file" />
    </root>

</configuration>